{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"esnext"
		],
		"removeComments": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"newLine": "LF",
		"declaration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowJs": false,
		"outDir": "build",
		"inlineSourceMap": true,
		"incremental": true,
		"tsBuildInfoFile": "./.tsbuildinfo",
		"alwaysStrict": true,
		"strict": true,
		"noImplicitReturns": true,
		"importHelpers": true
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts"
	]
}
